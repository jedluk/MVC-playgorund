extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet" href="/css/product.css")

block content
    main
        if prods.length > 0 
            div.grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://freeiconshop.com/wp-content/uploads/edd/book-open-outline-filled.png", alt="Book")
                        div.card__content
                            h2.product__price $19,99
                            p.product__description Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, soluta.
                        div.card__actions
                            button.btn Add to Cart
        else 
            h1 No Products
